{
  "name": "nawthtech-worker",
  "version": "1.0.0",
  "description": "NawthTech Cloudflare Worker with D1 Database",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev --port 8787",
    "dev:remote": "wrangler dev --remote",
    "deploy": "wrangler deploy",
    "deploy:prod": "wrangler deploy --env production",
    "db:create": "wrangler d1 create nawthtech-db",
    "db:init": "wrangler d1 execute nawthtech-db --file=./schema.sql",
    "db:local": "wrangler d1 execute nawthtech-db --local",
    "db:remote": "wrangler d1 execute nawthtech-db --remote",
    "db:console": "wrangler d1 console nawthtech-db",
    "db:migrate": "wrangler d1 migrations apply nawthtech-db",
    "kv:create": "wrangler kv:namespace create NAWTHTECH_KV",
    "r2:create": "wrangler r2 bucket create nawthtech-storage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src/**/*.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "build": "npm run typecheck",
    "start": "npm run dev",
    "prepare": "husky install"
  },
  "dependencies": {
    "@cloudflare/workers-types": "^4.20231121.0",
    "itty-router": "^5.0.17",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "wrangler": "^3.0.0",
    "vitest": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "prettier": "^3.1.0",
    "husky": "^8.0.0",
    "@commitlint/cli": "^18.0.0",
    "@commitlint/config-conventional": "^18.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "volta": {
    "node": "18.18.0"
  }
}