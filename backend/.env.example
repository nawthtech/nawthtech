ALLOWED_ORIGINS=http://127.0.0.1:3001
# إعدادات التطبيق
ENVIRONMENT=development
PORT=3000
APP_VERSION=1.0.0

# قاعدة البيانات
DATABASE_URL=postgres://username:password@localhost:5432/nawthtech

# المصادقة
JWT_SECRET=your-super-secret-jwt-key-here
ENCRYPTION_KEY=your-encryption-key-here

# التخزين المؤقت
CACHE_ENABLED=true
REDIS_URL=redis://localhost:6379
CACHE_PREFIX=nawthtech:
CACHE_DEFAULT_TTL=1h
CACHE_MAX_RETRIES=3

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# إعدادات الخدمات
SERVICES_MAX_PER_USER=50
SERVICES_MAX_ACTIVE=20
SERVICES_PAGINATION_LIMIT=20
SERVICES_AUTO_APPROVE=true

# الرفع
UPLOAD_MAX_FILE_SIZE=10485760
UPLOAD_STORAGE_PATH=./uploads